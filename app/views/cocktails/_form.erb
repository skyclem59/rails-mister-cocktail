
<div class = "container">
    <%= form_with model: @cocktail, local: true do |f| %>

        <div class="form-group">
          <%= f.label :name, 'Nom du cocktail' %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>


      <div class="text-right">
        <%= f.submit class: 'btn btn-link'  %>
      </div>
    <% end %>
</div>
